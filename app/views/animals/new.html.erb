
<span></span>
<span class="flex justify-end px-2 py-1 mx-20 mb-1 text-xs font-medium border border-purple-300 rounded-lg bg-purple-50 dark:bg-purple-300">
  <%= link_to "回前頁",root_path %>
</span>
  <%= form_with model: @animal do |f| %>
   
    <div class="py-1">
     <%= f.label "動物名" %>
     <%= f.text_field :name %>
    </div>
    <div class="px-4 py-1">
     <%= f.label "品種" %>
     <%= f.select(:species,[['Canine', 1], ['Feline', 2]]) %>
    </div>
    <div class="py-1">
     <%= f.label "病例號" %>
     <%= f.text_field :number %>
    </div>
   </div>
   <div class="px-12">
   <button class="px-2 py-2 mb-1 mr-1 text-sm font-medium text-white bg-red-300 rounded-lg focus:outline-none hover:bg-red-500 focus:ring-2 focus:ring-red-350 dark:bg-red-300 dark:hover:bg-red-500 dark:focus:ring-red-700"> 新增動物
   </button>
  </div>
   <% end %>


  
<h1 class="py-5 text-3xl"> 動物資料 </h1>

<span class="focus:outline-none text-white bg-red-500 hover:bg-red-700 focus:ring-5 focus:ring-red-300 font-medium rounded-lg text-base px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900 ">
 <%= link_to "新增動物基礎值表單", new_animal_path %>
</span>

<span class="px-3 py-2 mb-2 ml-2 mr-2 text-sm font-medium text-white bg-blue-300 rounded-lg focus:outline-none hover:bg-blue-500 focus:ring-5 focus:ring-blue-200 dark:bg-blue-300 dark:hover:bg-blue-500 dark:focus:ring-blue-700">
  <%= link_to "已出院動物", index_path %>
</span>
<hr class="my-5 bg-black-300">

<div>
<% @animals.each do |animal| %>
  <%= turbo_frame_tag dom_id(animal) do%>
   <li class="py-2">
    <sapn class="p-1 mb-1 border border-green-300 rounded-lg bg-green-50 dark:bg-green-300">
     <%= link_to animal.name, animal_path(animal.id) %>
     <%= animal.number %> 
    </sapn>
    <span class="p-1 mb-1 ml-5 text-sm border border-purple-300 rounded-lg bg-purple-50 dark:bg-purple-300">
     <%= link_to "出院", animal_archive_path(animal.id) %>
    </span>
    <span class="px-1 pt-0.5 pb-0.5 ml-2 text-xs border border-red-300">
     <%= link_to "修改", edit_animal_path(animal.id) %>
    </span>
    <span class="px-1 pt-0.5 pb-0.5 ml-1 text-xs border border-red-300">
     <%= link_to "刪除", animal_path(animal.id),data: {   turbo_confirm: "確定刪除？", turbo_method: "delete"} %>
    </span>
   </li>
  <% end %>
<% end %>
</div>

